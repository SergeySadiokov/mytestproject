{
	"info": {
		"_postman_id": "3d869fc7-5111-4bcb-a984-d814033f0bd1",
		"name": "Второй тест (не валидный)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Создаём питомца",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"//проверяем, что название \"pepega\"\r",
							"var jsonData = pm.response.json();\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Проверка наименования\", function () {\r",
							"    pm.expect(jsonData.name).to.eql(\"pepega\");\r",
							"});\r",
							"\r",
							"pm.collectionVariables.set(\"Pet_Id\", jsonData.id);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"id\": {{id}},\r\n  \"name\": \"pepega\",\r\n  \"status\": \"available\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{HostURL}}/v2/pet",
					"host": [
						"{{HostURL}}"
					],
					"path": [
						"v2",
						"pet"
					]
				}
			},
			"response": []
		},
		{
			"name": "Меняем имя и статус у питомца",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();\r",
							"pm.test(\"Проверка значения\", function () {\r",
							"    pm.expect(jsonData.message).to.eql(\"something bad happened\");\r",
							"});\r",
							"\r",
							"pm.test(\"Status code is 500\", function () {\r",
							"    pm.response.to.have.status(500);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "PUT",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"id\": \"kukis\",\r\n  \"name\": \"gari\",\r\n  \"status\": \"uehal\"\r\n}",
					"options": {

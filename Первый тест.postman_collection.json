{
	"info": {
		"_postman_id": "5f7a0d9e-5f37-4029-bd1a-57bdb9f78c0e",
		"name": "Первый тест",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Создаём питомца",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"//проверяем, что название \"pepega\"\r",
							"var jsonData = pm.response.json();\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Проверка наименования\", function () {\r",
							"    pm.expect(jsonData.name).to.eql(\"pepega\");\r",
							"});\r",
							"\r",
							"pm.collectionVariables.set(\"Pet_Id\", jsonData.id);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"id\": {{id}},\r\n  \"name\": \"pepega\",\r\n  \"status\": \"available\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{HostURL}}/v2/pet",
					"host": [
						"{{HostURL}}"
					],
					"path": [
						"v2",
						"pet"
					]
				}
			},
			"response": []
		},
		{
			"name": "Получаем питомца по ID",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();\r",
							"pm.test(\"Проверка статуса\", function () {\r",
							"    pm.expect(jsonData.status).to.eql(\"available\");\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{HostURL}}/v2/pet/{{Pet_Id}}",
					"host": [
						"{{HostURL}}"
					],
					"path": [
						"v2",
						"pet",
						"{{Pet_Id}}"
					]
				}
			},
			"response": []
		},
		{
			"name": "New Request",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Проверка значения\", function () {\r",
							"    pm.expect(jsonData.message).to.eql(\"123\");\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{HostURL}}/v2/pet/{{Pet_Id}}",
					"host": [
						"{{HostURL}}"
					],
					"path": [
						"v2",
						"pet",
						"{{Pet_Id}}"
					]
				}
			},
			"response": []
		}
	],
